{
  "skeleton": {
    "baseColor": "#E5E7EB",
    "highlightColor": "#F3F4F6",
    "borderRadius": "8px",
    "animation": {
      "duration": 1400,
      "easing": "ease-in-out"
    }
  },

  "spinner": {
    "size": {
      "sm": 16,
      "md": 24,
      "lg": 32
    },
    "stroke": 2,
    "duration": 900
  },

  "progress": {
    "linear": {
      "height": 3,
      "duration": 1200
    }
  }
}
